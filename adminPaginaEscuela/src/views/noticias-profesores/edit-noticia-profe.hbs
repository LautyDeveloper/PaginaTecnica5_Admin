<style>
    h3{
        color: orangered;
        font-size: 1.4rem;
        font-weight: 700;
        font-family: Arial, Helvetica, sans-serif   ;
    }
    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 500px;
        height: 550px;
        background-color: rgb(0, 0, 79);
        border-radius: 20px;
    }
    form{
        width: 80%;
        height: 85%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
    }
    form button{
        background-color: orangered;
        width: 90%;
        height: 30px;
        border-radius: 20px;
        border: none;
        outline: none;
        color: white;
        font-size: 1.2rem;
        font-weight: 700;
    }

    form div{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        width: 90%;
    }
    form div label{
        color: orangered;
        font-size: 1.1rem;
        font-weight: 700;
        font-family: Arial, Helvetica, sans-serif   ;
    }

    form div input, textarea{
        width: 100%;
        height: 30px;
        border: none;
        outline: none;
        padding-left: 10px;
        resize: none;
        background-color: rgb(2, 31, 194);
        color: white;
        font-weight: 600;
    }
    form div input::placeholder, textarea::placeholder{
        color: white;
    }
    
    form div textarea{
        height: 300px;
    }



</style>
<h3 class="text-uppercase">EDITANDO UNA NOTICIA PARA PROFESORES</h3>
<div class="container">
  <form action="/edit-noticia-profe/{{noticiasProfes.idNoticiaProfe}}" method="POST">
  <div>
  <label for="nombreNoticiaProfe">Nombre de su noticia para profesores</label>
  <input
    type="text"
    name="nombreNoticiaProfe"
    id="nombreNoticiaProfe"
    value="{{noticiasProfes.nombreNoticiaProfe}}"
    autofocus
    required
  />
  </div>
  <div>
  <label for="descripcionNoticiaProfe">Descripcion de la noticia para profesores</label>
  <textarea
    name="descripcionNoticiaProfe"
    id="descripcionNoticiaProfe"
    required
  >{{noticiasProfes.descripcionNoticiaProfe}}</textarea>

  </div>

  <button> Actualizar </button>

</form>
</div>