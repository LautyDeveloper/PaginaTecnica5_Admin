<style>
  body{
  overflow-y: scroll;

    background-color: whitesmoke;
  }
  h3{
    font-size: 1.5rem;
    font-family: Arial, Helvetica, sans-serif;
  }
  a{
    text-decoration: none;
    font-size: 1.2rem;
    color: orangered;
    font-weight: 600;
    font-family: Arial, Helvetica, sans-serif;
  }
  .container{
    width: 100vw;
    height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-top: 40px;
  }
  .container .arriba{
    padding-bottom: 20px;
  }
  
  table th{
    border: 2px solid black;
    font-size: 1.5rem;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 700;
  }
  table{
    width: 95%!important;
  }
  table td{
    border: 2px solid black;
    font-size: 1.3rem;

  }

</style>
<div class="container">
  <div class="arriba">
  <h3>Bienvenido a las Novedades para Profesores</h3>
  <a href="/add-noticia-profesor">Agregar novedad</a>
</div>



{{#if noticiasProfes}}
        <table style="width: 70vw;">
          <thead>
            <tr>
              <th class="chico">Novedad</th>
              <th class="chico">Descripcion</th>
              <th class="chico">Fecha</th>
              <th class="chico">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each noticiasProfes}}
              <tr>
                <td>{{nombreNoticiaProfe}}</td>
                <td>{{descripcionNoticiaProfe}}</td>
                <td>{{fecha}}</td>
                <td>
                    <a href="/edit-noticia-profe/{{idNoticiaProfe}}">Editar</a>
                    <a href="/delete-noticia-profe/{{idNoticiaProfe}}">Borrar</a>
                </td>
              </tr>
            {{/each}}

          </tbody>
        </table>
    {{else}}
        <div>
          <h3>Debes crear una novedad</h3>
  
          <p>Presiona este boton para que puedas registrar una novedad</p>
          <a href="/add-noticia-profesor">Ir a crear</a>
        </div>
{{/if}}
</div>


