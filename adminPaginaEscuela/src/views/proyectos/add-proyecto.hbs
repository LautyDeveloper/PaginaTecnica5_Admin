<style>
    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 450px;
        height: 550px;
        background-color: rgb(0, 0, 79);
        border-radius: 20px;
    }
    form{
        width: 85%;
        height: 85%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
    }
    form button{
        background-color: orangered;
        width: 90%;
        height: 30px;
        border-radius: 20px;
        border: none;
        outline: none;
        color: white;
        font-size: 1.2rem;
        font-weight: 700;
    }

    form div{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        width: 90%;
    }
    form div label{
        color: orangered;
        font-size: 1.2rem;
        font-weight: 700;
        font-family: Arial, Helvetica, sans-serif   ;
    }

    form div input, textarea{
        width: 100%;
        height: 30px;
        border: none;
        outline: none;
        padding-left: 10px;
        resize: none;
        background-color: rgb(2, 31, 194);
        color: white;
        font-weight: 600;
    }
    form div input::placeholder, textarea::placeholder{
        color: white;
    }
    
    form div textarea{
        height: 100px;
    }



</style>
<div class="container">
  <form action="/add-proyecto" method="POST" enctype="multipart/form-data">
    <div>
      <label for="proyectoNombre">Nombre del proyecto</label>
      <input
        type="text"
        name="proyectoNombre"
        id="proyectoNombre"
        placeholder="Nombre de su proyecto"
        autofocus
        required
      />
    </div>

    <div>
      <label for="descripcionProyecto">Descripcion del proyecto</label>
      <textarea
        name="descripcionProyecto"
        id="descripcionProyecto"
        placeholder="Describa su proyecto"
        required
      ></textarea>
    </div>

    <div>
      <label for="carrera">Carrera</label>
      <input
        type="text"
        name="carrera"
        id="carrera"
        placeholder="Carrera del proyecto"
        required
      />
    </div>

    <div>
      <label for="carrera">Cursos</label>
      <input
        type="text"
        name="cursos"
        id="cursos"
        placeholder="Carrera del proyecto"
        required
      />
    </div>

    <div>
      <label for="archivoUrl">Subir archivo (Word o PDF)</label>
      <input type="file" name="archivoUrl" id="archivoUrl" accept=".pdf,.doc,.docx" />
    </div>

    <button> Crear proyecto </button>
  </form>
</div>


