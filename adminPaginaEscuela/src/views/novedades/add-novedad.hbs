<style>
.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 500px;
    height: 650px;
    background-color: rgb(0, 0, 79);
    border-radius: 20px;
}

form {
    width: 80%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 90%;
}

form button {
    background-color: orangered;
    width: 90%;
    height: 30px;
    border-radius: 20px;
    border: none;
    outline: none;
    color: white;
    font-size: 1.2rem;
    font-weight: 700;
}

form div {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 90%;
}

form div label {
    color: orangered;
    font-size: 1.2rem;
    font-weight: 700;
}

form div input,
form div textarea {
    width: 100%;
    padding-left: 10px;
    height: 30px;
    background-color: rgb(2, 31, 194);
    color: white;
    font-weight: 600;
    border: none;
    outline: none;
}

form div input::placeholder,
form div textarea::placeholder {
    color: white;
}

form div .corta {
    height: 70px;
}

form div .larga {
    height: 300px;
}

.modal {
    display: none;
}

.modal-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px;
}

.close-button {
    cursor: pointer;
    font-size: 2rem;
    color: orangered;
}

</style>
<div class="container">
        <form action="/add-novedad" method="POST"  enctype="multipart/form-data" id="add-novedad-form">
    <div>
        <label for="novedad">Nombre de la novedad</label>
    <input type="text" name="novedad" id="novedad" placeholder="Nombre su novedad" autofocus required>
    </div>
        <div>
        <label for="imagen">Imagen de la novedad</label>
        <input type="file" name="imagen" id="imagen" accept="image/*" required>
    </div>
    <div>
        <label for="descripcion">Descripcion de la novedad</label>
    <input type="text" name="descripcion" id="descripcion" class="corta" placeholder="Describa su novedad" required></input>
    </div>
    <div>
        <label for="descripcionLarga">Descripcion Para la Pagina.</label>
    <textarea type="text" name="descripcionLarga" id="descripcionLarga" class="larga" placeholder="Describa su novedad, de forma extensa" required></textarea>
    </div>
    
    <button> Crear novedad </button>
</form>

    <!-- Modal de respuesta -->
    <div class="modal" id="responseModal">
        <div class="modal-content">
            <div class="modal-header" id="responseModalTitle">Mensaje</div>
            <div class="modal-body" id="responseModalBody"></div>
            <div class="modal-footer">
                <button id="closeModalButton">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/novedades/mostarModalAgregarNovedad.js"></script>
